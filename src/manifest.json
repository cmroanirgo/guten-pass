{
  "name": "Gutenberg Password Generator",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A password generator (for browsers) using gutenberg texts as source material",
  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "https://cors-anywhere.herokuapp.com/",
 	"https://gutenberg.org/",
 	"https://www.gutenberg.org/",
 	"http://gutenberg.org/",
 	"http://www.gutenberg.org/",
    "storage",
    "unlimitedStorage"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
	 	"https://gutenberg.org/*",
	 	"http://gutenberg.org/*",
	 	"https://www.gutenberg.org/*",
	 	"http://www.gutenberg.org/*"
      ],
      "js": [
        "js/page-gutenberg.js"
      ],
      "css": [
        "page-gutenberg.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "Generate",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["icons/*.png"]
}